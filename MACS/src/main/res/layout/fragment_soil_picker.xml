<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/SoilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Type"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:weightSum="1.0">

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="Ɣ"/>
            <EditText
                android:id="@+id/Soilunitwt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:editable="true"
                android:hint="Soil Unit Weight"
                android:inputType="numberDecimal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/SoilWt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/metric_soilunitwt"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_menu_help_holo_light"
                android:id="@+id/question_ws"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:weightSum="1.0">

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="Φ"
                />
            <EditText
                android:id="@+id/Soilfricta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:editable="true"
                android:hint="Soil friction angle"
                android:layout_weight="1"
                android:inputType="numberDecimal"/>

            <TextView
                android:text="degrees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_menu_help_holo_light"
                android:id="@+id/question_fricta"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:weightSum="1.0">

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="c"/>
            <EditText
                android:id="@+id/Soilcohesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:editable="true"
                android:hint="Soil Cohesion"
                android:inputType="numberDecimal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Soilc_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/metric_soilc"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_menu_help_holo_light"
                android:id="@+id/question_cohesion"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:weightSum="1.0">

            <Button
                android:id="@+id/soil_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="CANCEL"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/soil_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SAVE"
                android:layout_weight="0.5"/>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>