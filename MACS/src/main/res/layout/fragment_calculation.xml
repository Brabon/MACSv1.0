<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_meta_label"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/calculation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_single_title_hint"/>


        <EditText
            android:id="@+id/calculation_engineer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_engineer_name_hint"/>

        <EditText
            android:id="@+id/calculation_jobsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_job_site_hint"/>

        <Button
            android:id="@+id/calculation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_params"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/input_vehicle_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle Class"
            />

    <EditText
            android:id="@+id/input_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle Type"

            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hg"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/input_vehicle_height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Height of vehicle COG"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"
            />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cg"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/Cg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Distance of COG from anchor"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wv"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Wv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Weight of the Vehicle"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tl"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/Tl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle track length"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tw"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/Tw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle track width"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wb"
            android:layout_weight="0.9"
            android:layout_gravity="left"
            />

        <EditText
            android:id="@+id/Wb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Blade Width"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

        </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soil_params"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/SoilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Type"
           />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ws"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Soilunitwt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Unit Weight"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Φ"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Soilfricta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil friction angle"
            android:layout_weight="0.1"
            android:layout_gravity="right"
            android:inputType="numberDecimal"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="c"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Soilcohesion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Cohesion Factor"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measurements"
        style="?android:listSeparatorTextViewStyle"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="β"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Beta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_beta_hint"
            android:inputType="numberSigned"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="θ"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Theta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_theta_hint"
            android:inputType="numberSigned"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ha"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
         <EditText
            android:id="@+id/Ha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Height of Anchor Attachement"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="La"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/La"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Anchor Setback Distance"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Db"
            android:layout_weight="0.9"
            android:layout_gravity="left"/>
        <EditText
            android:id="@+id/Db"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Blade Embedment"
            android:inputType="numberDecimal"
            android:layout_weight="0.1"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORCE EQUILIBRIUM"/>
        <TextView
            android:id="@+id/slide_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/slide"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOMENT EQUILIBRIUM"/>
        <TextView
            android:id="@+id/roll_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/roll"
            android:editable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/perform_calc"
           />
        <Button
            android:id="@+id/report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Report"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>



