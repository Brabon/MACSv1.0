<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_meta_label"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/calculation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_single_title_hint"/>


        <EditText
            android:id="@+id/calculation_engineer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_engineer_name_hint"/>

        <EditText
            android:id="@+id/calculation_jobsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_job_site_hint"/>

        <Button
            android:id="@+id/calculation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ToggleButton
            android:id="@+id/toggle_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textOn="IMPERIAL"
            android:textOff="METRIC"
            android:onClick="onToggleClicked"
            android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_params"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/input_vehicle_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle Class"
            />

        <EditText
            android:id="@+id/input_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle Type"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Hg"
            />


        <EditText
            android:id="@+id/input_vehicle_height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Height of vehicle COG"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_hg"/>


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Cg"
           />

        <EditText
            android:id="@+id/Cg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Distance of COG from anchor"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_cg"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Wv"/>
        <EditText
            android:id="@+id/Wv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Weight of the Vehicle"
            android:layout_weight="1"
            android:inputType="numberDecimal"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_wv"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Tl"
/>

        <EditText
            android:id="@+id/Tl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle track length"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_tl"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Tw"/>

        <EditText
            android:id="@+id/Tw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Vehicle track width"
            android:inputType="numberDecimal"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_tw"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Wb"
            />

        <EditText
            android:id="@+id/Wb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Blade Width"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_wb"/>

        </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soil_params"
        style="?android:listSeparatorTextViewStyle"/>

        <EditText
            android:id="@+id/SoilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Type"
           />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Ws"/>
        <EditText
            android:id="@+id/Soilunitwt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Unit Weight"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_ws"/>

       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Φ"
/>
        <EditText
            android:id="@+id/Soilfricta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil friction angle"
            android:layout_weight="1"
            android:inputType="numberDecimal"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_fricta"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="c"/>
        <EditText
            android:id="@+id/Soilcohesion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Soil Cohesion"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_cohesion"/>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measurements"
        style="?android:listSeparatorTextViewStyle"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="β"/>
        <EditText
            android:id="@+id/Beta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_beta_hint"
            android:inputType="numberSigned"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_beta"/>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="θ"/>
        <EditText
            android:id="@+id/Theta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="@string/calc_theta_hint"
            android:inputType="numberSigned"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_theta"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Ha"/>
         <EditText
            android:id="@+id/Ha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Height of Anchor Attachement"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_ha"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="La"
/>
        <EditText
            android:id="@+id/La"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Anchor Setback Distance"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_la"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="1.0">

        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="Db"/>
        <EditText
            android:id="@+id/Db"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:editable="true"
            android:hint="Blade Embedment"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_menu_help_holo_light"
            android:id="@+id/question_db"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORCE EQUILIBRIUM"/>
        <TextView
            android:id="@+id/slide_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/slide"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOMENT EQUILIBRIUM"/>
        <TextView
            android:id="@+id/roll_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/roll"
            android:editable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/perform_calc"
           />
        <Button
            android:id="@+id/report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Report"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>



